@model Movies

@{
    ViewData["Title"] = "Create";
}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - BMS</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<style>
    .formCss {
        margin-left: 23%
    }

    .sidenav {
        height: 100%;
        width: 253px;
        position: fixed;
        z-index: 1;
        top: 0;
        /* color: aquamarine; */
        left: 0;
        background-color: #adb5bd;
        overflow-x: hidden;
        padding-top: 20px;
    }

        .sidenav a {
            padding: 30px 8px 9px 45px;
            text-decoration: none;
            font-size: 25px;
            color: #f8f9fa;
            display: block;
        }

            .sidenav a:hover {
                color: #f1f1f1;
            }

    .main {
        margin-left: 160px; /* Same as the width of the sidenav */
        font-size: 28px; /* Increased text to enable scrolling */
        padding: 0px 10px;
    }

    .imageclass {
        font-size: 14px;
    }

    .table {
        margin-left: 90px;
    }
</style>

<button type="submit" class="btn btn-primary">  </button>





<div class="sidenav">
    <a href="#clients">Home</a>
    <a asp-area="admin" asp-controller="home" asp-action="Index">All Users</a>
    <a asp-area="admin" asp-controller="home" asp-action="ShowAllBlobs">Movies</a>
    <a asp-area="admin" asp-controller="home" asp-action="Addmovies">Add Movies</a>


</div>
<div class="py-4">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-md-6 formCss">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <form autocomplete="off" method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="Home" asp-action="Addmovies">
                        <h3 class="col-12 text-success text-center py-4">
                            <strong>Movies</strong>
                        </h3>
                        <hr />
                        <div class="py-2 form-group">
                            <input asp-for="MovieName" placeholder="Movie Name" class="form-control" />
                            <span asp-validation-for="MovieName" class="text-danger"></span>
                        </div>
                        <div class="py-2 form-group">
                            <input asp-for="Genre" type="text" placeholder="Genre" class="form-control" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>
                        <div class="py-2 form-group">
                            <input asp-for="Director" type="text" placeholder="Director" class="form-control" />
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>
                        <div class="py-2 form-group">
                            <input asp-for="InitialRelease" placeholder="InitialRelease" class="form-control" />
                            <span asp-validation-for="InitialRelease" class="text-danger"></span>
                        </div>
                        <div class="py-2 form-group imageclass ">
                            <label asp-for="ImageFile" class="control-label"></label>
                            <input asp-for="ImageFile" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>


                        <div class="py-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>