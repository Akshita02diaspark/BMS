@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<Movies>

@{
    ViewData["Title"] = "ShowAllBlobs";
}


<ul class="navbar-nav">
 <li class="nav-item submenu dropdown dropdown-menu-right">
        @*<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@userName</a>*@

        <ul class="dropdown-menu ">

            <li class="nav-item">
                <a class="nav-link text-dark float-right" asp-area="Auth" asp-controller="Registration" asp-action="Index">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark float-right" asp-area="Auth" asp-controller="Login" asp-action="Index">Login</a>
            </li>
        </ul>
    </li>
</ul>



<style>
    .movie {
        width: 400px;
        height: 300px;
        margin-right: 68px;
    }

    .card-group {
        margin-top: 20px;
    }
    a{
        text-decoration:none;
        color:white;
    }
    footer{
        display:none;
    }
    .img {
        width: 100%;
        height: 300px;
    }
</style>


<div class="container">
    <a asp-area="Auth" asp-controller="Notification" asp-action="Email">Email</a>
    <div class="card-group">

        <div class="row">
            @foreach (var data in Model)
            {
                <div class="card col-md-4">
                    <img class="img" src=@data.ImageURL>

                    <div class="card-body">
                        <h3 class="card-title">Movie-@data.MovieName</h3>
                        <p class="card-text">Release date- @data.InitialRelease</p>
                        <p class="card-text">Genre -@data.Genre</p>
                        <p class="card-text">Director -@data.Director</p>
                    </div>
                    <button class="btn btn-primary"><a asp-area="Users" asp-controller="ShowTheater" asp-route-id="@data.ObjectId" asp-action="Index">Show Seats</a></button>
                </div>
            }

        </div>

    </div>
</div>

