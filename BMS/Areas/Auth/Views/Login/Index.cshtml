@model Registration
<style>
    .formCss{
        margin-left:23%
    }
</style>
<div class="py-4">
   

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-md-6 formCss">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <form id="account" autocomplete="off" method="post" asp-controller="Login" asp-action="Index">
                        <h3 class="col-12 text-success text-center py-4">
                            <strong>Sign In</strong>
                        </h3>
                        <hr />
                        <div class="py-2 form-group">
                            <input asp-for="EmailId" placeholder="Email" class="form-control" />
                            <span asp-validation-for="EmailId" class="text-danger"></span>
                        </div>
                        <div class="py-2 form-group">
                            <input asp-for="Password" placeholder="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="py-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

