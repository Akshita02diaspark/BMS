@using Microsoft.AspNetCore.Http;

@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>


        .head {
            height: 80px;
            font-family: inherit;
            font-size: 18px;
            font-weight: 600;
        }

        .logo {
            width: 80px;
            margin-top: -18px;
        }

        main {
            height: 1188px
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow head">
            <div class="container">

                <a class="navbar-brand" asp-area="Users" asp-controller="Home" asp-action="Index">
                    <img src="~/img/cinemalogo.png" class="logo"> BMS
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav font-family: cursive;">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Users" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        @if (string.IsNullOrEmpty(@HttpContextAccessor.HttpContext.Session.GetString("Email")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark float-right" asp-area="Auth" asp-controller="Registration" asp-action="Index">Register</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark float-right" asp-area="Auth" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark float-right" asp-area="Users" asp-controller="ShowMovies" asp-action="Index">Movies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark float-right" asp-area="Auth" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <link rel="stylesheet"
                  href="https://fonts.googleapis.com/css?family=Tangerine">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - BMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
